<%= render partial: "shared/navbar" %>

<div class="container">
  <h1><%= @board.name %></h1>
  <ul class="list-group list-group-horizontal">
    <li class="list-group-item"><%= "Width: #{@board.width}" %></li>
    <li class="list-group-item"><%= "Height: #{@board.height}" %></li>
    <li class="list-group-item"><%= "Mine Count: #{@board.mine_count}" %></li>
    <li class="list-group-item"><%= "Creator Email: #{@board.email}" %></li>
  </ul>

  <ul>
    <% @board.rows.each do |row| %>
      <br> <%= row.row_content %>
    <% end %>
  </ul>
</div>